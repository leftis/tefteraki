- model_class = Debt
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:sum) + ':'
  %br
  = @debt.sum
%p
  %strong= model_class.human_attribute_name(:paid) + ':'
  %br
  = @debt.paid
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @debt.state
%p
  %strong= model_class.human_attribute_name(:customer_id) + ':'
  %br
  = @debt.customer_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), debt_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_debt_path(@debt), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), debt_path(@debt), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
